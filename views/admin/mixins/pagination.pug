mixin pagination(pagination)
    nav.mt-5(class="pagination")
        ul(class="pagination")
            if (pagination.currentPage > 1)
                li(class="page-item")
                    a(class="page-link" href="#" button-pagination=pagination.currentPage - 1) Previous

            - for (let i = 1; i <= pagination.totalPage; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    a(class="page-link" href="#" button-pagination=i) #{i}

            if (pagination.currentPage < pagination.totalPage)
                li(class="page-item")
                    a(class="page-link" href="#" button-pagination=pagination.currentPage + 1) Next