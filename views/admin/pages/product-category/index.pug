extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main 

    h1.content-title Danh mục sản phẩm

    .card.mt-3
        .card-header Danh sách
        .card-body
            .row 
                .col-8
                    
                .col-4 
                    a(
                        href=`${prefixAdmin}/product-category/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới
        
            table(
                class=("table table-hover table-sm mt-3")
                checkbox-multi
            )
                thead  
                    tr 
                        th 
                            input(type="checkbox" name="checkall")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái 
                        th Hành động
                tbody 
                    +table-tree(records)