extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug


block main
    +alert-error(3000)
    .container.my-5
        .row.justify-content-center
            .col-6
                h1(class="text-center") Đổi mật khẩu mới 
                form(
                    action="/user/password/reset"
                    method="POST"
                ) 
                    div(class="form-group")
                        label(for="password") Mật khẩu mới
                        input(
                            class="form-control"
                            type="text"
                            id="password"
                            name="password"
                            require
                        ) 
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận lại mật khẩu
                        input(
                            class="form-control"
                            type="text"
                            id="confirmPassword"
                            name="confirmPassword"
                            require
                        ) 
                    div(class="form-group")
                        button(
                            type="text"
                            class="btn btn-primary btn-block"
                        ) Xác nhận
        