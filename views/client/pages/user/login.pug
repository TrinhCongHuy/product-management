extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug


block main
    +alert-error(3000)
    .container.my-5
        .row.justify-content-center
            .col-6
                h1(class="text-center") Đăng nhập tài khoản 
                form(
                    action="/user/login"
                    method="POST"
                ) 
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            class="form-control"
                            type="text"
                            id="email"
                            name="email"
                            require
                        ) 
                    div(class="form-group")
                        label(for="password") Mật khẩu
                        input(
                            class="form-control"
                            type="text"
                            id="password"
                            name="password"
                            require
                        ) 
                    div(class="form-group")
                        button(
                            type="text"
                            class="btn btn-primary btn-block"
                        ) Đăng nhập
        