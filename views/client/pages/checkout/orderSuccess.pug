extends ../../layouts/default.pug
include ../../mixins/box-head.pug
//- include ../../mixins/alert.pug


block main
    //- +alert-success(3000)
    .container.my-3 
        .row
            .col-12 
                +box-head(titlePage) 
        
        .row
            .col-12 
                div(class="alert alert-success")
                    p Chúc mừng bạn đặt hàng thành công
                    p Chúng tôi sẽ xử lý đơn hàng của bạn sớm nhất!
        
        if(order)
            .row 
                .col-12 
                h4(class="my-2") Thông tin cá nhân
                table(class="table table-bordered")
                    tbody
                        tr 
                            td Họ tên 
                            td #{order.userInfo.fullName}
                        tr 
                            td Số điện thoại 
                            td #{order.userInfo.phone}
                        tr 
                            td Địa chỉ 
                            td #{order.userInfo.address}
            .row 
                .col-12 
                h4(class="my-2") Thông tin đơn hàng
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT 
                            th Ảnh 
                            th Tên 
                            th Giá
                            th Số lượng
                            th Tổng tiền 
                    tbody 
                        if(order.products.length > 0)
                            each item, index in order.products
                                tr 
                                    td #{index + 1}
                                    td
                                        img(src=item.productInfo.thumbnail alt=item.productInfo.title width="80px")
                                    td #{item.productInfo.title}
                                    td #{item.priceNew} $
                                    td #{item.quantity}
                                    td #{item.totalPrice} $


            if(order.products.length > 0)
                h3(class="text-right") Tổng đơn hàng: #{order.totalPriceOrder} $   