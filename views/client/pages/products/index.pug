extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3 
        .row
            .col-12 
                +box-head("Danh sách sản phẩm")       
        .row 
            each item in products
                .col-4.mb-3 
                    .product-item 
                        .product-img 
                            img(src=item.thumbnail, alt=item.title)  
                        .product-content
                            h3.product-title 
                                a(href=`/products/${item.slug}`) #{item.title}
                            span.product-price--new #{item.priceNew}$
                            span.product-price--old #{item.price}$
                            span.product-discount -#{item.discountPercentage}%