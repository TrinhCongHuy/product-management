include ../mixins/sub-menu.pug

header(class="header") 
    .container 
        .row.align-items-center 
            .col-3 
                .header-logo 
                    a(href="/") 
                        img(class="logo-img" src="/images/logo.png", alt="logo") 
            .col-4
                form(
                    action='/search'
                    method='GET'
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            name="keyword"
                            class="form-control"
                            placeholder="Nhập từ khoá tìm kiếm..."
                            value=keyword
                        )
                        button(
                            class="btn btn-primary"
                            type="submit"
                        ) Tìm
            .col-5
                .header-menu 
                    ul.menu-list 
                        li.menu-list--item
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProduct = '/products'
                            a(href=pathProduct) Sản phẩm 
                            +sub-menu(layoutProductsCategory, pathProduct)
                        li 
                            a(class="mini-cart" href='/cart') Giỏ hàng
                                span(class="product-number") #{miniCart ? miniCart.totalProduct : "0"}
                        li 
                            a(class="" href='/user/register') Đăng ký
                        li 
                            a(class="" href='/user/login') Đăng nhập